function updateSelectorsVisibilityForView(viewId) {
  const isTerminal = viewId === "view-status-all";

  // En Terminal: ocultamos ambos
  if (isTerminal) {
    if (clientSelectorSection) clientSelectorSection.style.display = "none";
    if (storeSelectorSection) storeSelectorSection.style.display = "none";
    return;
  }

  // Fuera de Terminal: restauramos según tu lógica actual
  if (clientSelectorSection) {
    const shouldShowClient = currentRole === "admin" && (clients?.length || 0) > 0;
    clientSelectorSection.style.display = shouldShowClient ? "block" : "none";
  }

  // La tienda siempre debe verse en las vistas normales
  if (storeSelectorSection) storeSelectorSection.style.display = "block";
}