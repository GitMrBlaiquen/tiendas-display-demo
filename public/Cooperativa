async function pollLive() {
  if (!storesList.length) return;

  const tasks = storesList.map(async (s, idx) => {
    try {
      const [counters, status] = await Promise.all ([
          fetchJson(`${COUNTERS_URL}?storeId=${encodeURIComponent(s.id)}`),
          fetchJson(`${STATUS_URL}?storeId=${encodeURIComponent(s.id)}`),
          ]);
          
          updateStoteSlot(idx, counters, status);
    }     catch {
        // si falla una tienda, no se cae
    }
  });
  
  await Promise.allSettled(tasks);
}
